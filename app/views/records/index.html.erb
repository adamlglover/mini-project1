<p id="notice"><%= notice %></p>

<h1>Listing Records</h1>
<button type="button" class="btn btn-default"><%= link_to "Full Product Table", product_index_path %></button>
<button type="button" class="btn btn-default"><%= link_to "Full Customer Table", customer_index_path %></button>
<button type="button" class="btn btn-default"><%#= link_to "Full Accounts Table", product_index_path %></button>
<button type="button" class="btn btn-default"><%#= link_to "Full Inventory Table", product_index_path %></button>
<table class="table">
  <thead>
    <tr>
      <th>Customer id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Address</th>
      <th>State</th>
      <th>Zip</th>
      <th>P num</th>
      <th>P name</th>
      <th>P descript</th>
      <th>P instock</th>
      <th>P date</th>
      <th>P sold</th>
      <th>P qoh</th>
      <th>P price</th>
      <th>A</th>
      <th>A date</th>
      <th>A paid</th>
      <th>I</th>
      <th>I order size</th>
      <th>I vendor fn</th>
      <th>I vendor ln</th>
      <th>I vendor email</th>
      <th>I order date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.c_id %></td>
        <td><%= record.c_fn %></td>
        <td><%= record.c_ln %></td>
        <td><%= record.c_address %></td>
        <td><%= record.c_state %></td>
        <td><%= record.c_zip %></td>
        <td><%= record.p_num %></td>
        <td><%= record.p_name %></td>
        <td><%= record.p_descript %></td>
        <td><%= record.p_instock %></td>
        <td><%= record.p_date %></td>
        <td><%= record.p_sold %></td>
        <td><%= record.p_qoh %></td>
        <td><%= record.p_price %></td>
        <td><%= record.a_id %></td>
        <td><%= record.a_date %></td>
        <td><%= record.a_paid %></td>
        <td><%= record.i_id %></td>
        <td><%= record.i_order_size %></td>
        <td><%= record.i_vendor_fn %></td>
        <td><%= record.i_vendor_ln %></td>
        <td><%= record.i_vendor_email %></td>
        <td><%= record.i_order_date %></td>
        <td><%#= link_to 'Show', record %></td>
        <td><%#= link_to 'Edit', edit_record_path(record) %></td>
        <td><%#= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

