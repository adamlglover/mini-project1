<h1>Account Payable and Recievable Table</h1>
<button type="button" class="btn btn-default"><%= link_to "Sold Slowly", product_slowly_path %></button>
<button type="button" class="btn btn-default"><%= link_to "Sold Quickly", product_quickly_path %></button>
<br>
<button type="button" class="btn btn-default"><%= link_to "Full Customer Table", customer_index_path %></button>
<button type="button" class="btn btn-default"><%= link_to "Full Records", records_path %></button>
<table class="table">
  <thead>
    <tr>
      <th>Apr Id</th>
      <th>Product Number</th>
      <th>Customer Id</th>
      <th>Price</th>
      <th>Product Ordered Date</th>
      <th>Account invoice due date</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.a_id %></td>  
        <td><%= record.p_num %></td>
        <td><%= record.c_id %></td>
        <td><%= record.p_price %></td>
        <td><%= record.p_date %></td>
        <td><%= record.a_date %></td>
        <td><%= record.a_paid %></td>
        <td><%#= link_to 'Show', record %></td>
        <td><%#= link_to 'Edit', edit_record_path(record) %></td>
        <td><%#= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

