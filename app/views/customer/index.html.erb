<h1>Full Customer Table</h1>
<button type="button" class="btn btn-default"><%= link_to "Accounts Overdue", customer_overdue_path %></button>
<br>
<button type="button" class="btn btn-default"><%= link_to "Full Product Table", product_index_path %></button>
<button type="button" class="btn btn-default"><%= link_to "Full Accounts Table", apr_index_path %></button>
<button type="button" class="btn btn-default"><%= link_to "Full Inventory Table", inventory_index_path %></button>
<button type="button" class="btn btn-default"><%= link_to "Full Records", records_path %></button>
<table class="table">
  <thead>
    <tr>
      <th>Customer id</th>
      <th>Product Number</th>
      <th>Product Name</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Address</th>
      <th>State</th>
      <th>Zip</th>
      <th>Paid</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.c_id %></td>
        <td><%= record.p_num %></td>
        <td><%= record.p_name %></td>
        <td><%= record.c_fn %></td>
        <td><%= record.c_ln %></td>
        <td><%= record.c_address %></td>
        <td><%= record.c_state %></td>
        <td><%= record.c_zip %></td>
        <td><%= record.a_paid %></td>
        <td><%#= link_to 'Show', record %></td>
        <td><%#= link_to 'Edit', edit_record_path(record) %></td>
        <td><%#= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
