<h1>Products Sold slowly</h1>
<button type="button" class="btn btn-default"><%= link_to "Sold Quickly", product_quickly_path %></button>
<br>
<button type="button" class="btn btn-default"><%= link_to "Full Product Table", product_index_path %></button>
<button type="button" class="btn btn-default"><%= link_to "Full Customer Table", customer_index_path %></button>
<button type="button" class="btn btn-default"><%= link_to "Full Accounts Table", apr_index_path %></button>
<button type="button" class="btn btn-default"><%= link_to "Full Inventory Table", inventory_index_path %></button>

<button type="button" class="btn btn-default"><%= link_to "Full Records", records_path %></button>

<table class="table">
  <thead>
    <tr>
      <th>Product number</th>
      <th>Product name</th>
      <th>Product description</th>
      <th>Instock</th>
      <th>Date</th>
      <th>Sold</th>
      <th>QOH</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.p_num %></td>
        <td><%= record.p_name %></td>
        <td><%= record.p_descript %></td>
        <td><%= record.p_instock %></td>
        <td><%= record.p_date %></td>
        <td><%= record.p_sold %></td>
        <td><%= record.p_qoh %></td>
        <td><%= record.p_price %></td>
        <td><%#= link_to 'Show', record %></td>
        <td><%#= link_to 'Edit', edit_record_path(record) %></td>
        <td><%#= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

